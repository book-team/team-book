page {
    background: #f0f0f0;
}
.app {
    width: 100%;
    height: 100%;
}
.mymsg-box {
    width: 100%;
    height: 100%;
}
.message-item {
    width: 100%;
    padding: 14rpx 33rpx;
    margin-top: 19rpx;
    background: #fff;
    box-sizing: border-box;
}
.message-item:last-child {
    margin-bottom: 77rpx;
}
.message-left {
    float: left;
    width: 90rpx;
    height: 90rpx;
}
.message-left image {
    width: 100%;
    height: 100%;
}
.message-right {
    float: left;
    width: calc(100% - 106rpx);
    margin-left: 16rpx;
}
.message-goodstype-left {
    float: left;
    font-size: 33rpx;
    color: #353535;
}
.message-goodstype-right {
    float: right;
    font-size: 24rpx;
    color: #c2c2c2;
}
.message-goodsinfo {
    margin-top: 7rpx;
}
.message-goodsinfo-left {
    float: left;
    font-size: 26rpx;
    color: #929292;
    max-width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.message-goodsinfo-left > text {
    margin-right: 21rpx;
}
.message-goodsinfo-right {
    float: right;
    width: 37rpx;
    height: 37rpx;
    line-height: 37rpx;
    text-align: center;
    font-size: 20rpx;
    color: #fff;
    background: #ff0101;
    border-radius: 50%;
}
.message-bubble {
    max-width: 87%;
}
.new_nothing {
    margin-top: 350rpx;
}