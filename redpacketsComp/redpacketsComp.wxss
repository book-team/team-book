@import '../../utils/font.wxss';
.share-goods-bg {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: rgba(0, 0, 0, 0.7);
    z-index: 6;
}
.red-packet-box {
    width: 100%;
    height: 656rpx;
    background-repeat: no-repeat;
    background-size: 100% 100%;
    position: fixed;
    top: 15%;
    z-index: 7;
}
.close_shopdetail {
    width: 78rpx;
    height: 78rpx;
    position: absolute;
    bottom: -20%;
    left: 49%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
}
.pull-btn {
    width: 208rpx;
    height: 208rpx;
    border-radius: 50%;
    position: absolute;
    top: 42%;
    left: 49.5%;
    transform: translateX(-50%);
    -webkit-transform: translateX(-50%);
}
.service-tip-box {
    width: 570rpx;
    padding: 30rpx 35rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 3rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    -webkit-transform: translate(-50%, -50%);
    box-sizing: border-box;
    z-index: 10;
}
.service-tip-txt {
    display: inline-block;
    text-align: left;
}