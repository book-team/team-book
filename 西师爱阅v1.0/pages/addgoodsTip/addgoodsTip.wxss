.add-tip {
    width: 100%;
    height: 470rpx;
    padding-top: 120rpx;
}
.tip {
    width: 690rpx;
    margin: auto;
    margin-bottom: 20rpx;
    font-size: 30rpx;
}
.pc-way {
    margin: auto;
    width: 690rpx;
    color: #888;
    font-size: 30rpx;
    text-align: left;
    margin-bottom: 10rpx;
    word-break: break-all;
}
.copy {
    color: #39c5de;
    font-size: 30rpx;
    text-decoration: underline;
    margin-left: 20rpx;
}
.qr-code {
    width: 100%;
    height: 430rpx;
    position: relative;
    margin-top: 30rpx;
}
.qr_code {
    display: block;
    position: absolute;
    width: 360rpx;
    height: 360rpx;
    margin: auto;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
}
.icon-pencilwhite {
    color: #888;
    left: 130rpx;
    font-size: 30rpx;
    margin-left: 15rpx;
}
.icon-pencilwhite:after {
    content: '\e913';
}