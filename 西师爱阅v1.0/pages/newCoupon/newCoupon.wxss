page {
    background: #ececec;
}
.bespcou-head {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    background: #fff;
    box-sizing: border-box;
}
.bespcou-head > view {
    float: left;
    color: #050505;
    font-size: 28rpx;
    padding: 0 25rpx;
    box-sizing: border-box;
    height: 100%;
}
.bespcou-head > view.select {
    border-bottom: 4rpx solid #f42422;
}
.bespcoup-list {
    height: calc(100% - 91rpx);
    overflow-y: auto;
    background: transparent;
}
.bespcou-item {
    width: 690rpx;
    height: 236rpx;
    background-size: 100% 100%;
    color: #fff;
    margin: 20rpx auto 0;
    overflow: hidden;
    position: relative;
}
.bespcou-item:last-child {
    margin-bottom: 20rpx;
}
.bespcou-item-l {
    font-size: 72rpx;
    width: 195rpx;
    float: left;
    text-align: center;
    line-height: 210rpx;
    height: 210rpx;
}
.bespcou-item-l > text {
    font-size: 30rpx;
}
.bespcou-item-r {
    float: left;
    margin-left: 26rpx;
    width: 465rpx;
}
.bespcou-name {
    font-size: 47rpx;
    line-height: 47rpx;
    margin-top: 50rpx;
}
.bespcou-condition {
    margin-top: 38rpx;
    font-size: 20rpx;
    height: 20rpx;
    line-height: 20rpx;
}
.overtip {
    width: 90rpx;
    height: 38rpx;
    line-height: 38rpx;
    text-align: center;
    color: #fff;
    font-size: 20rpx;
    position: absolute;
    border: 1rpx solid #fff;
    top: 30rpx;
    right: 45rpx;
}
.userstore-overdue {
    background: #ccc;
}
.usestore-right-arrow {
    position: absolute;
    top: 16rpx;
    right: 10rpx;
    color: #fff;
    font-size: 38rpx;
}
.usestore-right-down {
    transform: rotate(90deg);
    -webkit-transform: rotate(90deg);
}
.dispatch-coupon-left {
    float: left;
    width: 36%;
    height: 100%;
    background-size: 100% 100%;
    color: #fff;
    line-height: 236rpx;
    text-align: center;
    box-sizing: border-box;
}
.dispatch-reduce-icon {
    font-size: 44rpx;
}
.dispatch-reduce-money {
    font-size: 90rpx;
}
.dispatch-coupon-right {
    float: left;
    width: 64%;
    height: 100%;
    padding: 27rpx 30rpx 27rpx 38rpx;
    background-size: 100% 100%;
    position: relative;
    border-radius: 0 12rpx 12rpx 0;
    box-sizing: border-box;
}
.dispatch-reduce-top {
    width: 100%;
    height: 74rpx;
    line-height: 74rpx;
    font-size: 32rpx;
    color: #464646;
    border-bottom: 2rpx dashed #a5a5a5;
    box-sizing: border-box;
}
.dispatch-reduce-bottom {
    margin-top: 20rpx;
}
.dispatch-reduce-tip {
    font-size: 24rpx;
    color: #8e8e8e;
    margin-bottom: 12rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.dispatch-reduce-type {
    width: 126rpx;
    height: 80rpx;
    position: absolute;
    right: 0;
    top: 0;
}
.dispatch-reduce-overdue {
    width: 150rpx;
    height: 148rpx;
    border-radius: 50%;
    position: absolute;
    right: 0;
    bottom: 0;
    background: #fff;
    z-index: 2;
}