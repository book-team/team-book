page {
    background: #ececec;
}
.app {
    width: 100%;
    height: 100%;
}
.coupon-detail-top {
    width: 100%;
    height: 80rpx;
    line-height: 80rpx;
    padding: 0 30rpx;
    background: #fff;
    font-size: 28rpx;
    color: #050505;
    box-sizing: border-box;
}
.coupon-detail-con {
    width: 100%;
    padding: 30rpx;
    background: #fff;
    margin-top: 3rpx;
    box-sizing: border-box;
}
.coupon-detail-item {
    margin-bottom: 25rpx;
}
.coupon-detail-item:last-child {
    margin-bottom: 0;
}
.coupon-con-left {
    float: left;
    font-size: 26rpx;
    color: #616161;
}
.coupon-con-right {
    float: left;
    margin-left: 42rpx;
}
.coupon-con-one {
    font-size: 24rpx;
    color: #888;
    margin-bottom: 10rpx;
}