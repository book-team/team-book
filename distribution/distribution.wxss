.dis-top-box {
    width: 720rpx;
    box-sizing: border-box;
    height: 400rpx;
    border: 1rpx solid #bbb;
    margin: 17rpx 15rpx 22rpx;
    border-top: 0;
}
.dis-money-box {
    background: #f65454;
    height: 250rpx;
    position: relative;
}
.cash-btn {
    border: 1rpx solid #fef4f4;
    font-size: 29rpx;
    color: #fff;
    height: 50rpx;
    line-height: 50rpx;
    width: 120rpx;
    position: absolute;
    right: 20rpx;
    top: 128rpx;
    text-align: center;
    border-radius: 3rpx;
}
.cash-btn1 {
    font-size: 40rpx;
    line-height: 40rpx;
    background-color: #fff;
    color: red;
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
    height: 40rpx;
    text-align: center;
    border-radius: 50%;
}
.cash-pro-txt {
    font-size: 31rpx;
    color: #fff;
    margin-left: 20rpx;
    padding-top: 40rpx;
    line-height: 30rpx;
}
.cash-money-txt {
    font-size: 62rpx;
    color: #ffdd24;
    margin-left: 20rpx;
    margin-top: 50rpx;
    line-height: 60rpx;
}
.dis-day-info {
    overflow: hidden;
}
.dis-day-box {
    width: 239rpx;
    border-right: 1rpx solid #bbb;
    box-sizing: border-box;
    float: left;
    height: 150rpx;
    text-align: center;
    font-size: 31rpx;
    line-height: 31rpx;
}
.dis-day-box:last-child {
    border-right: 0;
}
.dis-day-box > text {
    display: block;
    margin-top: 30rpx;
}
.day-name {
    color: #4e4e4e;
}
.day-money {
    color: #ff4545;
}
.opt-box {
    overflow: hidden;
    box-sizing: border-box;
    border-left: 1rpx solid #bbb;
    border-top: 0;
    margin: 0 15rpx;
}
.opt-item {
    width: 240rpx;
    border-right: 1rpx solid #bbb;
    border-bottom: 1px solid #bbb;
    box-sizing: border-box;
    float: left;
    height: 230rpx;
    text-align: center;
    font-size: 29rpx;
    color: #4e4e4e;
}
.opt-item > text {
    display: block;
    line-height: 29rpx;
}
.opt-num {
    color: red;
}
.icon-tixian::before {
    content: '\e648';
}
.icon-tubiaozhizuomoban::before {
